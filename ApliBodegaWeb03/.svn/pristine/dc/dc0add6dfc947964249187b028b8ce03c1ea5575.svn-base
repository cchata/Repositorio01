            if (val == 0) {
                PF('poll').stop();
                console.log(document.getElementById("formPesadoRollo:pesoKg").value);
                document.getElementById("formPesadoRollo:pesoKg").value = '';
//                document.getElementById("for 
//                mPesadoRollo:pesoKg").value = '';
            } else if (!PF('poll').active) {
                document.getElementById("formPesadoRollo:pesoKg").value = '';
                console.log(document.getElementById("formPesadoRollo:pesoKg").value);
                PF('poll').start();
            }
        }


