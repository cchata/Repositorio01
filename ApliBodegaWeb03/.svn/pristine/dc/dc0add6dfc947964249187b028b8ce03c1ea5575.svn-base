            cambiarBalanza(0);
            limpiarCSSTablaPrimeFaces();
        });

        document.getElementById("formPesadoRollo:numerBal").value = "0";
        document.getElementById("formPesadoRollo:pesoKg").value = "";
    </script>

</ui:composition>
